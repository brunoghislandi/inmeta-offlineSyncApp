{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@store/*": ["./src/store/*"],
      "@models/*": ["./src/models/*"],
      "@assets/*": ["./assets/*"],
      "@navigation/*": ["./src/navigation/*"]
    },
    "types": [
      "node",
      "react",
      "react-native",
      "react-native-vector-icons"
    ]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}